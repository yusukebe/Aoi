<h2>Entries</h2>

<form id="search-form" class="pure-form" action="/search" method="get">
  <input type="text" placeholder="Queries" name="q">
  <button class="pure-button" type="submit"><i class="fa fa-search"></i>
     Search</button>
</form>

<div class="entries">
<% sources.each do |data| %>
<% entry = data['_source'] %>
  <a href="/entry/<%= data['_id'] %>" class="clearfix">
    <div class="left text-center">
      <img src="<%= entry['user']['avatar_url'] %>" class="avatar" width="44" height="44" /><br />
      <%= entry['user']['login'] %>
    </div>
    <div class="left">
      <h3><%= h entry['title'] %></h3>
      <p class="ellipsis"><%= h entry['content'] %></p>
      <p><i class="pretty-date"><%= entry['time'] %></i></p>
    </div>
  </a>
<% end %>
</div>

<div class="pager">
<% if(page.to_i > 1) %>
<a class="button-large pure-button" href="/entry?page=<%= page.to_i - 1 %>">
  <i class="fa fa-angle-double-left"></i>
  Newer
</a>
<% end %>
<% if((total.to_i - 1) > page.to_i * size.to_i) %>
<a class="button-large pure-button" href="/entry?page=<%= page.to_i + 1 %>">
  Older
  <i class="fa fa-angle-double-right"></i>
</a>
<% end %>
</div>
